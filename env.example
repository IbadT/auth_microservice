# GRPC Configuration
GRPC_URL=0.0.0.0:50051
GRPC_PACKAGE=auth

# JWT Configuration
JWT_SUPER_SECRET_WORD=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_IN=7d

# Database Configuration
DATABASE_URL=postgresql://postgres:password@db:5432/auth_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=auth_db
POSTGRES_PORT=5432




# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
SECURITY_LOG_LEVEL=warn

# Redis Configuration (ОБЯЗАТЕЛЬНО для безопасности)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Brute Force Protection
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Password Policy
MIN_PASSWORD_LENGTH=12
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# TLS/SSL Configuration
TLS_ENABLED=false
TLS_PORT=50052
TLS_CERT_PATH=./certs/server.crt
TLS_KEY_PATH=./certs/server.key
TLS_CA_PATH=./certs/ca.crt

# Two-Factor Authentication
TOTP_ISSUER=Auth Microservice
TOTP_ALGORITHM=SHA1
TOTP_DIGITS=6
TOTP_PERIOD=30

# Anomaly Detection
ANOMALY_THRESHOLD=0.7
ANOMALY_CHECK_ENABLED=true

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Security Monitoring
SECURITY_MONITORING_ENABLED=true
ALERT_EMAIL=security@yourdomain.com
